<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login WhatsApp - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.5.1/build/qrcode.min.js"></script>
    <style>
        .whatsapp-bg {
            background-color: #25D366;
        }
        .qr-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        #qr-code {
            width: 200px;
            height: 200px;
            margin: 0 auto 20px auto;
            background: white;
            padding: 10px;
            border-radius: 5px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        #qr-canvas {
            width: 100%;
            height: 100%;
        }
        .status-indicator {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #e5e7eb;
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <div class="max-w-md w-full mx-4">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Bem-vindo ao Dashboard</h1>
            <p class="text-gray-600">Faça login com seu WhatsApp para continuar</p>
        </div>
        
        <div class="qr-container">
            <div id="qr-code">
                <canvas id="qr-canvas"></canvas>
            </div>
            <div class="text-center">
                <p class="text-gray-700 mb-4 text-lg font-medium">Escaneie o QR Code com seu WhatsApp</p>
                <div class="status-indicator">
                    <div class="flex items-center justify-center space-x-2">
                        <div class="w-4 h-4 bg-green-500 rounded-full animate-pulse"></div>
                        <span class="text-gray-600">Aguardando conexão...</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-6 text-center">
            <p class="text-sm text-gray-500">Após escanear o QR Code, você será redirecionado automaticamente</p>
        </div>
    </div>

    <script>
        // Função para atualizar o QR Code
        function updateQRCode(qr) {
            const canvas = document.getElementById('qr-canvas');
            QRCode.toCanvas(canvas, qr, {
                width: 180,
                margin: 1,
                color: {
                    dark: '#000000',
                    light: '#ffffff'
                }
            }, function (error) {
                if (error) console.error(error);
            });
        }

        // Função para verificar status do WhatsApp
        async function checkWhatsAppStatus() {
            try {
                const response = await fetch('/api/whatsapp-status');
                const data = await response.json();
                
                if (data.isReady) {
                    window.location.href = '/';
                } else if (data.qr) {
                    updateQRCode(data.qr);
                }
            } catch (error) {
                console.error('Erro ao verificar status:', error);
            }
        }

        // Verificar status a cada 2 segundos
        setInterval(checkWhatsAppStatus, 2000);
        
        // Verificar status imediatamente
        checkWhatsAppStatus();
    </script>
</body>
</html> 